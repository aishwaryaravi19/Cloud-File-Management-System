<form action="/upload" method="POST" enctype="multipart/form-data">
    <div class="file-field input-field">
      <div class="btn green">
        <span>File</span>
        <input name="myImage" type="file">
      </div>
      <input type="hidden" name=user value=<%=user.name %>>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>
    <button type="submit" class="btn">Upload</button>
  </form>
  <br/><br/>
  <br/><br/> 
  <h4><u>File Details</u></h4>
  <table>
    <thead>
      <tr>
          <th>User Name</th>
          <th>File Name</th>
          <th>Upload Time</th>
          <th>Download File</th>
          <th>Edit File</th>
          <th>Delete File</th>
      </tr>
    </thead>
    <% var cf = 'http://d3i9r2ifyy8coc.cloudfront.net/'%>
    <tbody>
        <% data.forEach(function (data) { %>
          <form action="/delete" method="POST">
          <tr name='row'>
                  <td name='user'><%= data.user %></td>
                  <td name='fileName'><%= data.fileName %></td>
                  <td name='uploadTime'><%= data.uploadTime %></td>
                  <td name='fileUrl'><a href='<%=cf + data.cloudfrontKey %>'><%= data.fileUrl %></a></td>
                  <td><button class='btn' name='<%= data.fileUrl %>' href='/edit/<%= data.fileUrl %>'>Edit</button></td>
                  <td><button class='btn' name=<%= data.fileUrl %>>Delete</button></td>
            </tr>
          </form>

      <% }) %>
      
    </tbody>
  </table>

  <br/><br/>
  <br/><br/> 
  <%if (logins.length > 0) { %>
    <h4><u>User Details</u></h4>
  <table>
      <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
        </tr>
      </thead>

      <tbody>
          <% logins.forEach(function (logins) { %>
            <tr>
                <td><%=logins.name %></td>
                <td><%=logins.email %></td>
            </tr>
        <% }) %>
        
      </tbody>
    </table>

    <br/><br/>
  <br/><br/> 
    <% } %>